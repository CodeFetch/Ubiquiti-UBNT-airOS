+static void send_signal(const char* pidfile, int sig) {
+    FILE* f = fopen(pidfile, "r");
+    if (f) {
+        pid_t pid = 0;
+        fscanf(f, "%u", &pid);
+        fclose(f);
+        if (pid)
+            kill(pid, sig);
+    }
+}
